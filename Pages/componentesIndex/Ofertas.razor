@using FlaggGaming.Model.juegoFlagg

<div class="row rounded mt-5 p-3 m-1">
    <div class="row">
        @if (arrayOfertas[0] != null)
        {
            <div class="row p-3 m-1">
                <div class="col-12 text-center"><h2>Ofertas</h2></div>
                <div class="col">
                    @for (int i = 0; i < 8; i++)
                    {
                        <div class="row mt-3 justify-content-between px-2">
                            <CardJuego unJuego="@arrayOfertas[i]" />
                            <CardJuego unJuego="@arrayOfertas[i+1]" />
                        </div>
                        i++;
                    }
                </div>
            </div>
        }
    </div>
</div>

@code
{
    [Parameter] public JuegoFlagg[] arrayOfertas { get; set; }
}